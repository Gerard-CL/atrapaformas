<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_basico"
    android:padding="24dp">


    <!-- Campo de texto para el nombre del jugador -->


    <!-- Texto "Elige el nivel:" -->


    <!-- ImageButton Nivel Fácil -->


    <!-- ImageButton Nivel Medio -->


    <!-- ImageButton Nivel Difícil -->

    <TextView
        android:id="@+id/tvIndicatuNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="¿Cómo te llamas?"
        android:textColor="#0B4F9C"
        android:textSize="90sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="15" />

    <ImageButton
        android:id="@+id/button_medio"
        android:layout_width="303dp"
        android:layout_height="119dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/button_medio"
        app:layout_constraintBottom_toBottomOf="@+id/button_facil"
        app:layout_constraintEnd_toStartOf="@+id/button_dificil"
        app:layout_constraintStart_toEndOf="@+id/button_facil"
        app:layout_constraintTop_toTopOf="@+id/button_facil"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/button_dificil"
        android:layout_width="303dp"
        android:layout_height="119dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/nivel_dificil"
        android:scaleType="fitCenter"
        android:src="@drawable/button_dificil"
        app:layout_constraintBottom_toBottomOf="@+id/button_facil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_medio"
        app:layout_constraintTop_toTopOf="@+id/button_facil"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/button_facil"
        android:layout_width="343dp"
        android:layout_height="119dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/button_facil"
        app:layout_constraintEnd_toStartOf="@+id/button_medio"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEligeNivel" />

    <TextView
        android:id="@+id/tvEligeNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="@string/elige_nivel"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NombreJugador"

        android:textColor="#0B4F9C"

        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10" />

    <EditText
        android:id="@+id/NombreJugador"
        android:layout_width="505dp"
        android:layout_height="77dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/rounded_edittext"
        android:hint="@string/nombre_jugador"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="400dp" />


</androidx.constraintlayout.widget.ConstraintLayout>